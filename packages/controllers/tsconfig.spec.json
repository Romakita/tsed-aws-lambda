{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "declaration": false,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "node",
      "esbuild",
      "vitest"
    ]
  },
  "include": [
    "tsup.config.ts",
    "vitest.config.ts",
    "vitest.config.e2e.mts",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts"
  ],
  "exclude": ["dist", ".esbuild"]
}
