{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "types": [
      "node",
      "vitest",
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "src/**/*.spec.ts",
    ".esbuild"
  ]
}
