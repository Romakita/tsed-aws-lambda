{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodeNext",
    "noEmit": true,
    "declaration": false,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "node",
      "esbuild",
      "vitest"
    ]
  },
  "include": [
    "esbuild.config.js",
    "vitest.config.ts",
    "src/**/*.spec.ts"
  ],
  "exclude": ["dist",".esbuild"]
}
