{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "declaration": false,
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "include": [
    "vitest.config.mts",
    "vitest.setup.mts",
    "src/**/*.spec.ts",
    "test/integrations/**/*.ts"
  ],
  "exclude": ["dist"]
}
